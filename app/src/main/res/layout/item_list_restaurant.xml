<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_restaurant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title_restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/item_adress_restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="French - 12 rue du fauboug PoissonniÃ¨re"
            android:textAlignment="textStart"></TextView>

        <TextView
            android:id="@+id/item_status_restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open until 7pm"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_distance_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="120m"></TextView>

        <ImageButton
            android:id="@+id/item_picture_restaurant"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"></ImageButton>
    </LinearLayout>

</LinearLayout>